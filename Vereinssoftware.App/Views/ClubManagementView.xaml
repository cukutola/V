<UserControl x:Class="Vereinssoftware.App.Views.ClubManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Vereinsverwaltung" 
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,10">
                <TextBlock Text="Name:" Margin="0,5"/>
                <TextBox Text="{Binding Club.Name, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="5" Margin="0,5"/>

                <TextBlock Text="Beschreibung:" Margin="0,5"/>
                <TextBox Text="{Binding Club.Description, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="5" Margin="0,5" Height="80" 
                         TextWrapping="Wrap" AcceptsReturn="True"/>

                <TextBlock Text="Adresse:" Margin="0,5"/>
                <TextBox Text="{Binding Club.Address, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="5" Margin="0,5"/>

                <TextBlock Text="Telefon:" Margin="0,5"/>
                <TextBox Text="{Binding Club.Phone, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="5" Margin="0,5"/>

                <TextBlock Text="E-Mail:" Margin="0,5"/>
                <TextBox Text="{Binding Club.Email, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="5" Margin="0,5"/>

                <TextBlock Text="Website:" Margin="0,5"/>
                <TextBox Text="{Binding Club.Website, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="5" Margin="0,5"/>

                <TextBlock Text="GrÃ¼ndungsdatum:" Margin="0,5"/>
                <DatePicker SelectedDate="{Binding Club.FoundedDate}" 
                           Padding="5" Margin="0,5"/>
            </StackPanel>
        </ScrollViewer>

        <Button Grid.Row="2" Content="Speichern" 
                Command="{Binding SaveCommand}"
                Padding="20,10" Margin="0,10"
                HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
